<%- include('../partials/admin-header') %>

<div class="container mx-auto px-4 sm:px-8">
    <div class="py-8">
        <div>
            <h2 class="text-2xl font-semibold leading-tight text-white">Dashboard Analitik</h2>
            <p class="text-slate-400">Ringkasan aktivitas website Anda.</p>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mt-8">
            <!-- Kartu Total Pengunjung -->
            <div class="bg-slate-800 p-6 rounded-lg shadow-lg flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-slate-400 uppercase tracking-wider">Total Pengunjung</p>
                    <p id="total-visits" class="text-3xl font-bold text-white mt-2">...</p>
                </div>
                <div class="bg-cyan-500/10 text-cyan-400 w-12 h-12 rounded-full flex items-center justify-center">
                    <i class="fas fa-users text-xl"></i>
                </div>
            </div>
            <!-- Kartu Total Pesanan -->
            <div class="bg-slate-800 p-6 rounded-lg shadow-lg flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-slate-400 uppercase tracking-wider">Total Pesanan</p>
                    <p id="total-orders" class="text-3xl font-bold text-white mt-2">...</p>
                </div>
                <div class="bg-cyan-500/10 text-cyan-400 w-12 h-12 rounded-full flex items-center justify-center">
                    <i class="fas fa-shopping-cart text-xl"></i>
                </div>
            </div>
            <!-- Kartu Pesanan Sukses -->
            <div class="bg-slate-800 p-6 rounded-lg shadow-lg flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-slate-400 uppercase tracking-wider">Pesanan Sukses</p>
                    <p id="successful-orders" class="text-3xl font-bold text-white mt-2">...</p>
                </div>
                <div class="bg-cyan-500/10 text-cyan-400 w-12 h-12 rounded-full flex items-center justify-center">
                    <i class="fas fa-check-circle text-xl"></i>
                </div>
            </div>
            <!-- Kartu Total Pendapatan -->
            <div class="bg-slate-800 p-6 rounded-lg shadow-lg flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-slate-400 uppercase tracking-wider">Total Pendapatan</p>
                    <p id="total-revenue" class="text-3xl font-bold text-white mt-2">...</p>
                </div>
                <div class="bg-cyan-500/10 text-cyan-400 w-12 h-12 rounded-full flex items-center justify-center">
                    <i class="fas fa-dollar-sign text-xl"></i>
                </div>
            </div>
        </div>
        
        <!-- Area untuk Chart di masa depan -->
        <div class="mt-8 bg-slate-800 p-6 rounded-lg shadow-lg">
             <h3 class="text-xl font-semibold text-white">Grafik Pengunjung & Pendapatan (7 Hari Terakhir)</h3>
             <div class="mt-4 h-80">
                <canvas id="mixedChart"></canvas>
             </div>
        </div>
        <!-- ==================================================================== -->
    </div>
</div>

<!-- Impor library Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const adminUrl = '/nori-secret-panel'; // Definisikan URL admin baru
        // --- Fungsi untuk mengambil data kartu (tetap sama) ---
        async function fetchAnalytics() {
            try {
                const response = await fetch(`${adminUrl}/analytics`);
                if (!response.ok) throw new Error('Gagal memuat data analitik');
                const data = await response.json();
                document.getElementById('total-visits').textContent = data.totalVisits.toLocaleString('id-ID');
                document.getElementById('total-orders').textContent = data.totalOrders.toLocaleString('id-ID');
                document.getElementById('successful-orders').textContent = data.successfulOrders.toLocaleString('id-ID');
                const formattedRevenue = new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0 }).format(data.totalRevenue);
                document.getElementById('total-revenue').textContent = formattedRevenue;
            } catch (error) {
                console.error(error);
                document.getElementById('total-visits').textContent = 'Error';
                document.getElementById('total-orders').textContent = 'Error';
                document.getElementById('successful-orders').textContent = 'Error';
                document.getElementById('total-revenue').textContent = 'Error';
            }
        }

        // --- FUNGSI GRAFIK DIPERBARUI UNTUK GRAFIK GABUNGAN ---
        async function renderMixedChart() {
            try {
                const response = await fetch(`${adminUrl}/chart-data`);
                if (!response.ok) throw new Error('Gagal memuat data grafik');
                const chartData = await response.json();

                const ctx = document.getElementById('mixedChart').getContext('2d');
                
                new Chart(ctx, {
                    type: 'bar', // Tipe default adalah bar
                    data: {
                        labels: chartData.labels,
                        datasets: [
                            {
                                type: 'line', // Override menjadi garis untuk pengunjung
                                label: 'Pengunjung',
                                data: chartData.visitorData,
                                borderColor: '#06b6d4',
                                backgroundColor: 'rgba(6, 182, 212, 0.1)',
                                borderWidth: 2,
                                tension: 0.3,
                                fill: true,
                                yAxisID: 'yVisitors' // Tautkan ke sumbu Y kiri
                            },
                            {
                                type: 'bar', // Tetap bar untuk pendapatan
                                label: 'Pendapatan (Rp)',
                                data: chartData.revenueData,
                                backgroundColor: 'rgba(34, 197, 94, 0.6)',
                                borderColor: 'rgba(34, 197, 94, 1)',
                                yAxisID: 'yRevenue' // Tautkan ke sumbu Y kanan
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        interaction: { mode: 'index', intersect: false },
                        scales: {
                            yVisitors: { // Sumbu Y kiri untuk pengunjung
                                type: 'linear',
                                display: true,
                                position: 'left',
                                grid: { drawOnChartArea: false, color: 'rgba(255, 255, 255, 0.1)' },
                                ticks: { color: '#94a3b8', precision: 0 }
                            },
                            yRevenue: { // Sumbu Y kanan untuk pendapatan
                                type: 'linear',
                                display: true,
                                position: 'right',
                                grid: { color: 'rgba(255, 255, 255, 0.1)' },
                                ticks: {
                                    color: '#94a3b8',
                                    callback: (value) => 'Rp ' + new Intl.NumberFormat('id-ID').format(value)
                                }
                            },
                            x: {
                                grid: { display: false },
                                ticks: { color: '#94a3b8' }
                            }
                        },
                        plugins: {
                            legend: { position: 'top', labels: { color: '#e2e8f0' } },
                            tooltip: {
                                callbacks: {
                                    label: (context) => {
                                        let label = context.dataset.label || '';
                                        if (label) label += ': ';
                                        if (context.dataset.type === 'bar') {
                                            label += new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0 }).format(context.parsed.y);
                                        } else {
                                            label += context.parsed.y;
                                        }
                                        return label;
                                    }
                                }
                            }
                        }
                    }
                });
            } catch (error) {
                console.error(error);
                document.getElementById('mixedChart').parentElement.innerHTML = '<p class="text-center text-slate-400">Gagal memuat data grafik.</p>';
            }
        }

        fetchAnalytics();
        renderMixedChart();
    });
</script>

